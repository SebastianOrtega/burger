<div class="container">
	<div class="text-center">
		<img src="assets/images/burger.png" class="rounded" alt="Sparkle Burger Image">
	</div>

	<h1 class="text-center">Eat-Da-Burger!</h1>
	<!-- Data columns -->
	<div class="row">
		<!--Not devoured list-->
		<div class="col-md-7 data" id="not-devoured">
			<!-- Data from server.js -->
			<ul class="list-group">
				{{#each burgers}}
				{{#unless devoured}}
				{{> burgers/burgerNotDevoured-block}}
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<!-- space 
		<div class="col-md-2" id="blank">
		</div>-->

		<!--Devoured list-->
		<div class="col-md-5 data" id="devoured">
			<ul class="list-group">
				{{#each burgers}}
				{{#if devoured}}
				{{> burgers/burgerDevoured-block}}
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

	<br>
	<!-- Eneter data -->
	<div class="row justify-content-center bottom">
		<div class="col-md-8">
			<form class="create-form">
				<div class="form-group">
					<textarea class="form-control form-control-lg" type="text" name="burger_name" id="burgerTextInfo" placeholder=""></textarea>
					<br>
					<button type="submit" class="btn btn-info btn-lg burger-button">Submit</button>
					<br>
					<p class="text-center">Enter the burger you want to eat! then click "submit".</p>
				</div>
			</form>
		</div>
	</div>
</div>